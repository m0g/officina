{
  "name": "officina",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tailwind": "npx tailwindcss -i ./src/_assets/css/styles.css -o ./_site/css/styles.css --watch",
    "start": "eleventy --serve --watch",
    "dev:eleventy": "ELEVENTY_ENV=development eleventy --watch --quiet",
    "debug:eleventy": "DEBUG=Eleventy:* ELEVENTY_ENV=development eleventy --watch",
    "prebuild": "npx tailwindcss -i ./src/_assets/css/styles.css -o ./_site/css/styles.css --minify",
    "build": "ELEVENTY_ENV=production eleventy --output=./_site",
    "bsprod": "browser-sync start --server ./_site -w --no-open --no-notify --no-ghost-mode",
    "testbuild": "npm-run-all clean --parallel prod:webpack prod:eleventy bsprod",
    "format": "prettier --write \"src/**/*.+(js|json|css|md|rb)\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-img": "^0.8.2",
    "@babel/core": "^7.13.10",
    "@ibm/plex": "^5.1.3",
    "autoprefixer": "^10.2.5",
    "eleventy-plugin-local-respimg": "^0.4.0",
    "husky": "^5.1.3",
    "imagemin-mozjpeg": "^9.0.0",
    "install": "^0.13.0",
    "leaflet": "^1.7.1",
    "lint-staged": "^10.5.4",
    "luxon": "^1.26.0",
    "mini-css-extract-plugin": "^1.3.9",
    "npm": "^7.6.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.34",
    "postcss-cli": "11.0.0",
    "prettier": "^2.2.1",
    "sharp": "^0.27.2",
    "tailwindcss": "3.4.1"
  },
  "dependencies": {
    "npm-check-updates": "^11.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
