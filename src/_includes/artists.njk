---
layout: layout.njk
---
<div>
<div class="h-full min-h-full relative md:my-32">
  <div class="h-full flex min-h-full z-10 relative">
    <div class="h-full max-w-screen-xl md:mx-auto flex flex-col md:flex-row">
      <div class="md:w-1/2 md:mt-20 mb-10">
        <h1 class="font-bold italic text-6xl text-black leading-tight">
          {{ title }}
        </h1>
        <p class="text-sm text-black mx-4 md:mx-0 my-4">
          {{ content | safe }}
        </p>
        <a 
          href="mailto:residency.officina@gmail.com?subject=Artist+Residency" 
          class="inline-block text-white font-bold text-smc bg-black px-8 py-2 mt-4 ml-4 md:ml-0">
          Apply now
        </a>
      </div>
      <div class="md:ml-16 md:w-1/3 relative">
        <img src="/src/_assets/img/artist-residency2.png" class="object-contain lazy" />
        <a 
          href={{ pdflink }} 
          target="_blank" 
          class="absolute -bottom-4 -right-2 md:-right-4 bg-yellow-custom rounded-full px-12 py-12 text-center transform rotate-20"
        >
          <div class="font-plex text-blue-custom font-bold w-24 text-sm">deadline open call: 1 Nov 2020</div>
          <div class="font-plex font-bold text-xl w-24">Click Me!</div>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="bg-blue-custom pt-24">
  <div class="h-full max-w-screen-xl mx-4 md:mx-auto flex flex-col">
    <h2 class="font-bold italic text-5xl text-salmon md:w-1/3 leading-tight">
      Our residents so far
    </h2>
    <div class="flex flex-col mt-12">
      {%- for artist in collections.artist | reverse -%}
        <div class="mb-16 max-w-screen-xl mx-auto flex flex-col md:flex-row">
          <div class="md:w-1/3 md:mr-10">
            <img 
              src="{{ artist.data.image }}" 
              class="object-contain lightbox lazy" 
              title="{{ artist.data.name }}"
              alt="{{ artist.data.name }}"
            />
          </div>
          <div class="md:w-1/2">
            <h2 class="text-white font-plex text-salmon text-2xl font-bold">
              {{ artist.data.name }}
            </h2>
            <div class="text-white italic">{{ artist.data.period }}</div>
            <div class="text-white my-8">
              {{ artist.templateContent | safe }}
            </div>
            <div>
              <a
                target="blank"
                rel="noopener"
                href="{{ artist.data.website }}"
                class="text-salmon"
              >
                {{ artist.data.website}}
              </a>
            </div>
          </div>
        </div>
      {%- endfor -%}
      </ul>
    </div>
  </div>
</div>