<div class="w-full mx-auto pt-16 flex flex-row" id="contact">
  <div id="map" class="h-screen w-1/2"></div>
  <div class="w-1/2">
    <h2 class="font-mono font-semibold text-xl text-center">Get in touch</h2>
    <form name="contact" netlify class="px-8 pt-6 pb-8">
      <div class="px-3">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
        <input type="text" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="px-3">
        <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input type="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="px-3">
        <label class="block text-gray-700 text-sm font-bold mb-2">Telephone</label>
        <input type="text" name="phone" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="px-3">
        <label class="block text-gray-700 text-sm font-bold mb-2">Message</label>
        <textarea name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></textarea>
      </div>
      <div class="px-3">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Send</button>
      </div>
    </form>
  </div>
</div>
 