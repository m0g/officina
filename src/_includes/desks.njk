---
layout: layout.njk
---

<div class="">
  <div class="h-full relative mt-16 md:my-32">
    <div class="h-full flex min-h-full z-10 relative">
      <div class="h-full max-w-screen-xl md:mx-auto flex flex-col md:flex-row">
        <div class="md:w-2/3 mb-10 mx-4">
          <h1
            class="font-bold italic text-5xl md:text-6xl text-black leading-tight"
          >
            {{ title }}
          </h1>
          <p class="text-sm text-black my-4">{{ content | safe }}</p>
        </div>
        <div class="md:ml-16 md:w-1/3 relative">
          {% image image, "Artist residency" %}
        </div>
      </div>
    </div>
  </div>
  <div class="bg-yellow-custom md:py-16">
    <div
      class="max-w-screen-xl mx-auto flex flex-col-reverse md:flex-row gap-6"
    >
      {% image fix_desk_image, "Fix Desk" %}
      <div class="relative pb-36 pt-16 px-4 md:p-0">
        <h2 class="font-plex font-bold text-4xl">{{ fix_desk_title }}</h2>
        <div>{{ fix_desk_content | safe }}</div>
        <a
          href="https://docs.google.com/forms/d/e/1FAIpQLSe_aJwPcxRE_1LtocSHlrjHqDOQhm763ElOiURhH6KCOzL96g/viewform"
          target="_blank"
          class="absolute -bottom-4 md:-bottom-6 right-0 bg-white rounded-full px-12 py-12 text-center transform rotate-20 shadow-lg"
        >
          <div class="font-plex text-blue-custom font-bold w-24 text-sm">
            {{ fix_desk_price }}
          </div>
          <div class="font-plex font-bold text-xl w-24">Apply here!</div>
        </a>
      </div>
    </div>
  </div>
  <div class="md:py-16">
    <div
      class="max-w-screen-xl mx-auto flex flex-col-reverse md:flex-row-reverse gap-6"
    >
      {% image flex_desk_image, "Fix Desk" %}
      <div class="relative px-4 pb-36 pt-16 md:p-0">
        <h2 class="font-plex font-bold text-4xl">{{ flex_desk_title }}</h2>
        <div>{{ flex_desk_content | safe }}</div>
        <a
          href="https://docs.google.com/forms/d/e/1FAIpQLSe_aJwPcxRE_1LtocSHlrjHqDOQhm763ElOiURhH6KCOzL96g/viewform"
          target="_blank"
          class="absolute -bottom-4 md:-bottom-6 left-0 bg-yellow-custom rounded-full px-12 py-12 text-center transform -rotate-20 shadow-lg"
        >
          <div class="font-plex text-blue-custom font-bold w-24 text-sm">
            {{ flex_desk_price }}
          </div>
          <div class="font-plex font-bold text-xl w-24">Apply here!</div>
        </a>
      </div>
    </div>
  </div>
  <div class="md:py-16 bg-blue-custom">
    <div class="text-white font-bold text-center">
      {{ trial_day_info }}
    </div>
  </div>
</div>
