---
layout: layout.njk
---
<div>
<div class="h-full min-h-full relative mt-16 md:my-32">
  <div class="h-full flex min-h-full z-10 relative">
    <div class="h-full max-w-screen-xl md:mx-auto flex flex-col md:flex-row">
      <div class="md:w-1/2 md:mt-20 mb-10">
        <h1 class="font-bold italic text-5xl md:text-6xl text-black leading-tight">
          {{ title }}
        </h1>
        <p class="text-sm text-black mx-4 md:mx-0 my-4">
          {{ content | safe }}
        </p>
        <a
          href="mailto:residency.officina@gmail.com?subject=Artist+Residency"
          class="inline-block text-white font-bold text-smc bg-black px-8 py-2 mt-4 ml-4 md:ml-0">
          Contact
        </a>
      </div>
      <div class="md:ml-16 md:w-1/3 relative">
        {% image image, "The space" %}
      </div>
    </div>
  </div>
  <div class="absolute -bottom-4 left-0 right-0 hidden md:block">
    <div class="text-sm italic text-center">Scroll down</div>
    <div class="text-center text-2xl">&#9660;</div>
  </div>
</div>
<div class="bg-yellow-custom md:pt-24">
  <div class="h-full max-w-screen-xl mx-4 md:mx-auto flex flex-col">
    <div class="flex flex-col my-12">
      {%- for event in collections.event | sortByDateDesc -%}
        <div class="mb-4 max-w-screen-xl flex flex-col md:flex-row">
          <div class="md:w-1/2">
            <a
              target="blank"
              rel="noopener"
              href="{{ event.data.link }}"
            >
              <div class="italic">{{ event.data.date | htmlDateString }}</div>
              <h2 class="font-plex text-2xl font-bold">
                {{ event.data.name }}
              </h2>
            </a>
            <div class="mb-6">
              {{ event.templateContent | safe }}
            </div>
          </div>
        </div>
      {%- endfor -%}
      </ul>
    </div>
  </div>
</div>
