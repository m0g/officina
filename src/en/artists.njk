  </div>
</div>
<div class="bg-blue-custom pt-24">
  <div class="h-full max-w-screen-xl mx-auto flex flex-col">
    <h2 class="font-bold italic text-5xl text-salmon w-1/3 leading-tight">
      Our residents so far
    </h2>
    <div class="flex flex-col mt-12">
      {%- for artist in collections.artist -%}
        <div class="mb-16">
          <div class="max-w-screen-xl mx-auto">
            <h2 class="text-white font-plex text-salmon text-2xl font-bold">
              {{ artist.data.name }}
            </h2>
            <div class="text-white italic">{{ artist.data.period }}</div>
            <div class="text-white my-8">
              {{ artist.templateContent | safe }}
            </div>
            <div>
              <a target="blank" href="{{ artist.data.website }}" class="text-salmon">
                {{ artist.data.website}}
              </a>
            </div>
          </div>
        </div>
      {%- endfor -%}
      </ul>
    </div>
  </div>
</div>